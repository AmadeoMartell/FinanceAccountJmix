<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://clientDetailView.title"
      focusComponent="form">
    <data>
        <instance id="clientDc"
                  class="com.company.financeaccountjmix.entity.Client">
            <fetchPlan extends="_base">
                <property name="bankAccounts" fetchPlan="_base"/>
                <property name="transactionTypes" fetchPlan="_base">
                    <property name="transactions" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="clientDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="clientDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="usernameField" property="username"/>
            <textField id="firstNameField" property="firstName"/>
            <textField id="lastNameField" property="lastName"/>
            <textField id="emailField" property="email"/>
            <checkbox id="activeField" property="active"/>
            <textField id="timeZoneIdField" property="timeZoneId"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
