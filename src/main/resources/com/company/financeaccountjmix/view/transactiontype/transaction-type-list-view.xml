<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://transactionTypeListView.title"
      focusComponent="transactionTypesDataGrid">
    <data>
        <collection id="transactionTypesDc"
                    class="com.company.financeaccountjmix.entity.TransactionType">
            <fetchPlan extends="_base">
                <property name="client" fetch="JOIN">
                    <property name="username"/>
                    <property name="firstName"/>
                    <property name="lastName"/>
                </property>
                <property name="transactions" fetch="JOIN">
                    <property name="fromAccount" fetchPlan="_base"/>
                    <property name="toAccount" fetchPlan="_base"/>
                </property>
            </fetchPlan>
            <loader id="transactionTypesDl" readOnly="true">
                <query>
                    <![CDATA[
                        select e
                          from TransactionType e
                         where e.client.id = :userId
                    ]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="transactionTypesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="transactionTypesDataGrid.createAction"/>
            <button id="editButton" action="transactionTypesDataGrid.editAction"/>
            <button id="removeButton" action="transactionTypesDataGrid.removeAction"/>
            <simplePagination id="pagination" dataLoader="transactionTypesDl"/>
        </hbox>
        <dataGrid id="transactionTypesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="transactionTypesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="createAction" type="list_create"/>
                <action id="editAction" type="list_edit"/>
                <action id="removeAction" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="client"/>
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
